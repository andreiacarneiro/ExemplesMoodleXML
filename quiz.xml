<?xml version="1.0" ?>
<quiz>
	<question type="multichoice">
		<name>
			<text>Demo question à choix multiples</text>
		</name>
		
		<questiontext format="html">
			<text>Quel est la bonne réponse?</text>
		</questiontext>
		
		<penalty>1</penalty>
		
		<defaultgrade>1</defaultgrade>
		
		<answer fraction="100">
			<text>Ceci est la bonne réponse</text>
			<feedback>
				Bravo !
			</feedback>
		</answer>
		
		<answer fraction="0">
			<text>Une mauvaise réponse</text>
			<feedback>
				Ooops!
			</feedback>
		</answer>
		
		<answer fraction="0">
			<text>Une autre mauvaise réponse</text>
			<feedback>
				Ooops!
			</feedback>
		</answer>
		
		<shuffleanswers>1</shuffleanswers>
		
		<single>true</single>
	</question>
	
	<question type="pairmatching">
		<name>
			<text>Demo question d'appariement</text>
		</name>
		
		<questiontext format="html">
			<text>Quelle est la bonne réponse</text>
		</questiontext>
		
		<penalty>1</penalty>
		
		<defaultgrade>1</defaultgrade>
		
		<subquestion>
			<text>Premier item de la première paire</text>
			<answer>
				Second item de le première paire
			</answer>
		</subquestion>
		
		<subquestion>
			<text>Premier item de la seconde paire</text>
			<answer>
				Second item de la seconde paire
			</answer>
		</subquestion>
		
		<shuffleanswers>true</shuffleanswers>
	</question>
</quiz>